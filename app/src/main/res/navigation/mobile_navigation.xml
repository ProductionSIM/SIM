<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/activity_home"
        android:name="com.example.sim.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/ProductOverview"
        android:name="com.example.sim.ui.dashboard.ProductOverviewFragment"
        android:label="@string/title_produkte"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/ListOverview"
        android:name="com.example.sim.ui.notifications.ListOverviewFragment"
        android:label="@string/title_Listen"
        tools:layout="@layout/activity_products" />
    <fragment
        android:id="@+id/loginActivity"
        android:name="com.example.sim.LoginActivity"
        android:label="@string/title_Login"
        tools:layout="@layout/activity_login" />
    <activity
        android:id="@+id/registerActivity"
        android:name="com.example.sim.RegisterActivity"
        android:label="activity_register"
        tools:layout="@layout/activity_register" />
    <activity
        android:id="@+id/listActivity"
        android:name="com.example.sim.ListActivity"
        android:label="activity_add_list"
        tools:layout="@layout/activity_add_list" />
    <activity
        android:id="@+id/productActivity"
        android:name="com.example.sim.ProductActivity"
        android:label="activity_add_product"
        tools:layout="@layout/activity_add_product" />
</navigation>